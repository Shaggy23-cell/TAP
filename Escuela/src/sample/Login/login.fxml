<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="241.0" prefWidth="400.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Login.Login">
   <children>
      <VBox layoutX="45.0" layoutY="25.0" prefHeight="200.0" prefWidth="310.0">
         <children>
            <TextField fx:id="txtUser" alignment="CENTER" prefHeight="34.0" prefWidth="310.0" promptText="Ingresar contraseña" style="-fx-background-radius: 10;">
               <VBox.margin>
                  <Insets top="12.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="txtPassword" alignment="CENTER" prefHeight="34.0" prefWidth="310.0" promptText="Contraseña" style="-fx-background-radius: 10;">
               <VBox.margin>
                  <Insets top="6.0" />
               </VBox.margin>
            </PasswordField>
            <Button mnemonicParsing="false" onAction="#login" prefHeight="25.0" prefWidth="317.0" style="-fx-background-color: #73ECEE; -fx-background-radius: 30;" text="Iniciar Sesion" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="12.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold Italic" size="15.0" />
               </font>
            </Button>
            <Label fx:id="lblEliminar" alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#Eliminar" prefHeight="17.0" prefWidth="310.0" text="eliminar usuario" textAlignment="CENTER" textFill="#052ae4" textOverrun="CENTER_ELLIPSIS" underline="true">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="4.0" />
               </VBox.margin>
            </Label>
            <Button mnemonicParsing="false" onAction="#crear" prefHeight="25.0" prefWidth="245.0" style="-fx-background-radius: 30; -fx-background-color: #C3EE73;" text="Crear Cuenta Nueva">
               <VBox.margin>
                  <Insets left="33.0" top="6.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
